%html
  %head
    %link{:href => 'stylesheet.css', :rel => 'stylesheet', :media => 'all' }
    %script{ :type => "text/javascript" :src => "/js/jquery-1.3.2.min.js" }
    %script{ :type => "text/javascript" :src => "/js/jquery.countdown.min.js" }
  %body
    %h1 Sing Pomodoro
    .content
      .left
        %h2 Running
        .running
          = haml :pomodoro, :locals => { :pomodoros => @running_pomodoros }
        %span.bgnumber #{@running_pomodoros.count}
      .right
        %h2 Recently Completed
        = haml :pomodoro, :locals => { :pomodoros => @successful_pomodoros }
        %span.bgnumber #{@successful_pomodoros.count}
          